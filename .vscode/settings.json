{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true,
        "**/*.uf2": true,
        "keyboards/[!cpi]*": true,
        "keyboards/c[!r]*": true,
        "keyboards/cr[!k]*": true,
        "keyboards/crk[!b]*": true,
        "keyboards/crkb[!d]*": true,
        "keyboards/crkbd/keymaps/[!lvd]*": true,
        "keyboards/crkbd/keymaps/l[!i]*": true,
        "keyboards/crkbd/keymaps/li[!s]*": true,
        "keyboards/crkbd/keymaps/lis[!p]*": true,
        "keyboards/crkbd/keymaps/lisp[!i]*": true,
        "keyboards/crkbd/keymaps/lispi[!n]*": true,
        "keyboards/crkbd/keymaps/lispin[!k]*": true,
        "keyboards/crkbd/keymaps/d[!e]*": true,
        "keyboards/crkbd/keymaps/de[!f]*": true,
        "keyboards/crkbd/keymaps/def[!a]*": true,
        "keyboards/crkbd/keymaps/defa[!u]*": true,
        "keyboards/crkbd/keymaps/defau[!l]*": true,
        "keyboards/crkbd/keymaps/defaul[!t]*": true,
        "keyboards/crkbd/keymaps/v[!i]*": true,
        "keyboards/crkbd/keymaps/vi[!a]*": true,
        "keyboards/i[!d]": true,
        "keyboards/id[!o]": true,
        "keyboards/ido[!b]": true,
        "keyboards/idob[!a]": true,
        "keyboards/idoba[!o]": true,
        "keyboards/p[!l]*": true,
        "keyboards/pl[!a]*": true,
        "keyboards/pla[!n]*": true,
        "keyboards/plac[!k]*": true,
        "keyboards/planck/keymaps/[!ld]*": true,
        "keyboards/planck/keymaps/l[!i]*": true,
        "keyboards/planck/keymaps/li[!s]*": true,
        "keyboards/planck/keymaps/lis[!p]*": true,
        "keyboards/planck/keymaps/lisp[!i]*": true,
        "keyboards/planck/keymaps/lispi[!n]*": true,
        "keyboards/planck/keymaps/lispin[!k]*": true,
        "keyboards/planck/keymaps/d[!e]*": true,
        "keyboards/planck/keymaps/de[!f]*": true,
        "keyboards/planck/keymaps/def[!a]*": true,
        "keyboards/planck/keymaps/defa[!u]*": true,
        "keyboards/planck/keymaps/defau[!l]*": true,
        "keyboards/planck/keymaps/defaul[!t]*": true,
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    },
    "clangd.arguments": [
        "--header-insertion=never"
    ]
}
